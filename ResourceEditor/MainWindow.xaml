<Window x:Class="ResourceEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourceEditor"
        mc:Ignorable="d"
        Title="Resource editor" Height="450" Width="800"
        d:DataContext="{d:DesignInstance local:MainViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Choose folder" Command="{Binding ChooseFolderCommand}"/>
        </Menu>
        <TextBlock Grid.Row="0" Text="{Binding FolderName}" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding DataView, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanUserAddRows="False"
                  ColumnWidth="*" HorizontalScrollBarVisibility="Auto"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" IsEnabled="{Binding CanExecute}"/>
            <Button Content="Clear" Command="{Binding ClearCommand}" Width="100" IsEnabled="{Binding CanExecute}" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
